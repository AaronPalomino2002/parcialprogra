@model TransaccionesApp.Models.Remesa

@{
    ViewData["Title"] = "Registrar Remesa";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />

<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .card {
        border: none;
        border-radius: 15px;
        padding-bottom: 20px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        text-align: center;
        border-radius: 15px 15px 0 0;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 12px;
        font-size: 16px;
        background-color: #f7f9fc;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 12px;
        width: 100%;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .text-danger {
        font-size: 14px;
    }

    h2 {
        font-weight: 600;
        font-size: 1.8rem;
    }

    label {
        font-weight: 500;
        margin-bottom: 8px;
    }

    .form-group {
        position: relative;
    }

    .form-group i {
        position: absolute;
        right: 15px;
        top: 40px;
        color: #007bff;
    }

    .select {
        border-radius: 8px;
    }

    .form-feedback {
        font-size: 12px;
        color: #dc3545;
    }

    .mb-3 {
        margin-bottom: 1.5rem !important;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h2>Registrar Remesa</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label for="NombreRemitente">Nombre del Remitente</label>
                            <input type="text" asp-for="NombreRemitente" class="form-control" placeholder="Ingrese el nombre del remitente" />
                            <i class="fas fa-user"></i>
                            <span asp-validation-for="NombreRemitente" class="form-feedback"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="NombreDestinario">Nombre del Destinatario</label>
                            <input type="text" asp-for="NombreDestinario" class="form-control" placeholder="Ingrese el nombre del destinatario" />
                            <i class="fas fa-user"></i>
                            <span asp-validation-for="NombreDestinario" class="form-feedback"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="PaisOrigen">País de Origen</label>
                            <select asp-for="PaisOrigen" class="form-control select">
                                <option value="USA">Estados Unidos</option>
                                <option value="MEX">México</option>
                                <option value="ESP">España</option>
                                <!-- Más países -->
                            </select>
                            <i class="fas fa-globe"></i>
                            <span asp-validation-for="PaisOrigen" class="form-feedback"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="PaisDestino">País de Destino</label>
                            <select asp-for="PaisDestino" class="form-control select">
                                <option value="USA">Estados Unidos</option>
                                <option value="MEX">México</option>
                                <option value="ESP">España</option>
                                <!-- Más países -->
                            </select>
                            <i class="fas fa-globe"></i>
                            <span asp-validation-for="PaisDestino" class="form-feedback"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="MontoEnviado">Monto Enviado</label>
                            <input type="number" asp-for="MontoEnviado" class="form-control" step="0.01" placeholder="Ingrese el monto enviado" />
                            <i class="fas fa-dollar-sign"></i>
                            <span asp-validation-for="MontoEnviado" class="form-feedback"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="TipoMoneda">Tipo de Moneda</label>
                            <select asp-for="TipoMoneda" class="form-control select">
                                <option value="USD">USD</option>
                                <option value="BTC">BTC</option>
                            </select>
                            <i class="fas fa-money-bill"></i>
                            <span asp-validation-for="TipoMoneda" class="form-feedback"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="TasaCambio">Tasa de Cambio</label>
                            <input type="number" asp-for="TasaCambio" class="form-control" step="0.01" placeholder="Tasa de cambio" />
                            <i class="fas fa-exchange-alt"></i>
                            <span asp-validation-for="TasaCambio" class="form-feedback"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Estado">Estado de la Transacción</label>
                            <select asp-for="Estado" class="form-control select">
                                <option value="Pendiente">Pendiente</option>
                                <option value="Completada">Completada</option>
                            </select>
                            <i class="fas fa-info-circle"></i>
                            <span asp-validation-for="Estado" class="form-feedback"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Registrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
